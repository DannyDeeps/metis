<div class="offcanvas offcanvas-end" tabindex="-1" id="{block 'canvas-id'}{/block}-canvas" aria-labelledby="custom-canvas-label">
    <div class="offcanvas-header">
        <button type="button" class="btn-close text-reset ms-0 me-2" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        <h5 class="offcanvas-title fs-4 fw-bold" id="custom-canvas-label">{block 'canvas-title'}{/block}</h5>
    </div>
    <div class="offcanvas-body">
        {block 'canvas-body'}{/block}
    </div>
</div>